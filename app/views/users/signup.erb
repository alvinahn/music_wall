<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form class="basic-grey" method="post" action="/users/signup">
  <h1>Sign up</h1>
  <div>
    <label>Email:</label>
    <input type="email" name="email" value="<%= @user && @user.email %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password" value="<%= @user && @user.password %>">
  </div>
  <br>
  <div>
    <input type="submit" class="button" Value="Sign up">  
  </div>
</form>